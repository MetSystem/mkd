<Window x:Class="WpfIATCSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfIATCSharp"
        mc:Ignorable="d"
        Title="Akkadu" Height="120" Width="217">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="Foreground" Value="Blue"></Setter>
            <Setter Property="FontFamily" Value="CourierNew"></Setter>
        </Style>
    </Window.Resources>
    <Canvas>
        <Button Name="btnStart" Height="25" Width="50" Content="开始" Click="btnStart_Click" Style="{StaticResource ButtonStyle}" Canvas.Top="41" Canvas.Left="44"></Button>
        <Button Name="btnStop" Height="25" Width="50" Content="停止" Click="btnStop_Click" Style="{StaticResource ButtonStyle}" Canvas.Left="108" Canvas.Top="41"/>
        <ComboBox Name="combDevice" Width="105" Canvas.Left="82" Canvas.Top="7" Height="19"/>
        <TextBlock TextWrapping="Wrap" Text="选择设备：" VerticalAlignment="Top" Canvas.Top="9" Width="67" Canvas.Left="15" />
        <ProgressBar Name="prgVolume"  Height="6" Canvas.Top="73" Width="172" Canvas.Left="15"/>
    </Canvas>

</Window>
